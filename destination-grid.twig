<section class="card" style="margin-block:16px;padding:16px">
  <h2 style="margin:0 0 8px 0">{{ trans("dalilah.destinations.title") }}</h2>
  <div style="display:grid;grid-template-columns:repeat(4,1fr);gap:12px">
  {% for d in component.get('destinations', []) %}
    <a href="{{ d.link }}" class="card" style="position:relative;overflow:hidden">
      <img src="{{ d.image }}" alt="{{ d.title }}" style="width:100%;height:180px;object-fit:cover">
      <div style="position:absolute;inset:auto 8px 8px 8px;background:rgba(0,0,0,.5);color:#fff;padding:8px 10px;border-radius:10px;font-weight:700">{{ d.title }}</div>
    </a>
  {% endfor %}
  </div>
</section>
