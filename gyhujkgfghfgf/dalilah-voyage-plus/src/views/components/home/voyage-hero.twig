<section class="card" style="margin-block:16px;position:relative;overflow:hidden">
  {% set heading = component.get('heading')|default(trans('dalilah.hero.heading')) %}
  {% set subheading = component.get('subheading')|default(trans('dalilah.hero.subheading')) %}
  {% set banner = component.get('banner') %}
  {% set show_search = component.get('show_search', true) %}
  <div style="display:grid;grid-template-columns:1fr;min-height:320px;place-items:center;background:#0b1220">
    {% if banner %}
      <img src="{{ banner }}" alt="" style="position:absolute;inset:0;width:100%;height:100%;object-fit:cover;opacity:.35">
    {% endif %}
    <div style="position:relative;z-index:1;text-align:center;color:white;padding:40px 16px;max-width:900px">
      <h1 style="font-size:clamp(28px,4vw,44px);margin:0 0 8px 0">{{ heading }}</h1>
      <p style="margin:0 0 16px 0;opacity:.9">{{ subheading }}</p>
      {% if show_search %}
        <div style="margin-top:12px">
          <salla-search inline oval height="56"></salla-search>
        </div>
      {% endif %}
    </div>
  </div>
</section>
